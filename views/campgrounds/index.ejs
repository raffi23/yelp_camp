<%- include("../partials/header") %>

<div class="container">
	

<header class="jumbotron">
	<div class="container">
		<h1>Welcome to YelpCamp</h1>
		<p>View our handpicked campground from all over the world</p>
		<p>
			<a href="/campgrounds/new"><button class="btn btn-primary btn-lg">Add new campground</button></a>
		</p>
	</div>
</header>
	
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(item){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= item.image %>">
					<div class="caption">
						<h4><%= item.title %></h4>
						<p>
							<a href="/campgrounds/<%= item._id %>" class="btn btn-primary">More Info</a>
						</p>
					</div>
				</div>
			</div>
		<% }); %>	
	</div>


	
	
</div>

<%- include("../partials/footer") %>